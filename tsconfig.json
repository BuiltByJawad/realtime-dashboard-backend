{
 "compilerOptions": {
  "target": "ES2020",
  "module": "commonjs",
  "rootDir": "src",
  "outDir": "dist",

  "strict": true,
  "esModuleInterop": true,
  "moduleResolution": "node",

  "resolveJsonModule": true,
  "skipLibCheck": true,

  "types": ["node", "jest"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
